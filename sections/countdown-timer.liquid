{% assign section_unique_id = section.id | replace: '-', '_' %}

{% render 'countdown-timer-snippet',
  countdown_text: section.settings.countdown_text,
  countdown_day: section.settings.countdown_day,
  countdown_month: section.settings.countdown_month,
  countdown_year: section.settings.countdown_year,
  section_id: section_unique_id
%}

{% schema %}
{
  "name": "Countdown Timer",
  "tag": "section",
  "settings": [
    {
      "type": "text",
      "id": "countdown_text",
      "label": "Countdown Text",
      "default": "Special Offer - Donâ€™t Miss Out!"
    },
    {
      "type": "checkbox",
      "id": "show_days",
      "label": "Show Days",
      "default": true
    },
    {
      "type": "number",
      "id": "countdown_day",
      "label": "Day of Countdown Date (i.e. 03, 14, 22, 10)"
    },
    {
      "type": "checkbox",
      "id": "show_months",
      "label": "Show Months",
      "default": true
    },
    {
      "type": "number",
      "id": "countdown_month",
      "label": "Month of Countdown Date (i.e. 03, 11, 08, 12)"
    },
    {
      "type": "checkbox",
      "id": "show_years",
      "label": "Show Years",
      "default": true
    },
    {
      "type": "number",
      "id": "countdown_year",
      "label": "Year of Countdown Date (i.e. 2023, 2024, 2025)"
    },
    {
      "type": "header",
      "content": "Additional Countdown Information"
    },
    {
      "type": "checkbox",
      "id": "show_hours",
      "label": "Show Hours",
      "default": true
    },
    {
      "type": "checkbox",
      "id": "show_mins",
      "label": "Show Minutes",
      "default": true
    },
    {
      "type": "checkbox",
      "id": "show_sec",
      "label": "Show Seconds",
      "default": true
    }
  ],
  "presets": [
    {
      "name": "Countdown Timer"
    }
  ]
}
{% endschema %}
