{% assign section_unique_id = section.id | replace: '-', '_' %}

{% render 'countdown-timer-snippet',
  countdown_text: section.settings.countdown_text,
  countdown_day: section.settings.countdown_day,
  countdown_month: section.settings.countdown_month,
  countdown_year: section.settings.countdown_year,
  section_id: section_unique_id,
  show_months: section.settings.show_months,
  show_days: section.settings.show_days,
  show_years: section.settings.show_years,
  show_hours: section.settings.show_hours,
  show_mins: section.settings.show_mins,
  show_sec: section.settings.show_sec
%}

{% schema %}
{
  "name": "Countdown Timer",
  "tag": "section",
  "settings": [
    {
      "type": "text",
      "id": "countdown_text",
      "label": "Countdown Text",
      "default": "Special Offer - Donâ€™t Miss Out!"
    },
    {
      "type": "number",
      "id": "countdown_day",
      "label": "Day of countdown date (i.e. 03, 14, 22, 10)"
    },
    {
      "type": "number",
      "id": "countdown_month",
      "label": "Month of countdown date (i.e. 03, 11, 08, 12)"
    },
    {
      "type": "number",
      "id": "countdown_year",
      "label": "Year of countdown date (i.e. 2023, 2024, 2025)"
    },
    {
      "type": "header",
      "content": "Additional Countdown Information"
    },
    {
      "type": "checkbox",
      "id": "show_days",
      "label": "Show days until set date",
      "default": true
    },
    {
      "type": "checkbox",
      "id": "show_months",
      "label": "Show months until set date",
      "default": true
    },
    {
      "type": "checkbox",
      "id": "show_years",
      "label": "Show years until set date",
      "default": true
    },
    {
      "type": "checkbox",
      "id": "show_hours",
      "label": "Show hours until set date",
      "default": true
    },
    {
      "type": "checkbox",
      "id": "show_mins",
      "label": "Show minutes until set date",
      "default": true
    },
    {
      "type": "checkbox",
      "id": "show_sec",
      "label": "Show seconds until set date",
      "default": true
    }
  ],
  "presets": [
    {
      "name": "Countdown Timer"
    }
  ]
}
{% endschema %}
